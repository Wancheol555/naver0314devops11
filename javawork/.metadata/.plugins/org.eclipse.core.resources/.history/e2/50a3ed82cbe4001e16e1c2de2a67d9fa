package day0318;

public class Ex2_AssciCode {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//char는 내부적으로 int 타입으로 인식
		char a='A';
		char b=65; //아스키 코드로 65는 문자 'A'이다
		System.out.println(a+","+b);
		System.out.printf("a=%d,%c\n",(int)a,a);
		System.out.printf("b=%d,%c\n",(int)b,b);
		System.out.println(a+3);//68-> char+int=int
		System.out.println((char)(a+3)); //68->D - char로 형변환을 해주면 문자로 인식
		
		char c='7'; // 문자 7
		System.out.println(c);
		System.out.println(c+2);
	}

}
